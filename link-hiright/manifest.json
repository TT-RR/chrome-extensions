{
"manifest_version": 3,
"name": "Page Source Reader",
"version": "1.0.0",
"description": "Read the current tab's HTML source (DOM-serialized or raw from network).",
"action": {
"default_title": "Get page source",
"default_popup": "popup.html"
},
"background": {
"service_worker": "background.js"
},
"permissions": [
"activeTab",
"scripting",
"downloads",
"tabs",
"storage"
],
"host_permissions": [
"<all_urls>"
]
}